/* pages/information/information.wxss */

page {
  background: #f5f5f5;
  font-family: Helvetica;
}

.tishi {
  width: 100%;
  font-size: 30rpx;
  color: #999;
  line-height: 100rpx;
  height: 100rpx;
  padding-left: 3%;
}

.information {
  width: 94%;
  margin-left: 3%;
  margin-bottom: 120rpx;
}

.informationList {
  width: 100%;
  position: relative;
  height: 180rpx;
  color: #fff;
  padding: 20rpx 20rpx 30rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  overflow: hidden;
}
.moveLong{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.informationList  text {
  line-height: 60rpx;
}

.informationList view {
  line-height: 60rpx;
}

.informationList .imageBg {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 160rpx;
  border-radius: 20rpx;
  box-shadow: 4rpx 8rpx 12rpx 6rpx rgba(12, 24, 139, 0.1);
}

.imageArrow {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
  top: 58rpx;
}

button {
  width: 100%;
  height: 100rpx;
  background: #4381ed;
  position: fixed;
  bottom: 0;
  line-height: 100rpx;
  color: #fff;
  border-radius: 0;
  font-size: 34rpx;
}

.del {
  background-color: orangered;
  display: inline-block;
  width: 150rpx;
  height: 160rpx;
  line-height: 160rpx;
  color: #fff;
  -webkit-transform: translateX(150rpx);
  transform: translateX(150rpx);
  
  position: absolute;
  right: 0;
  top: 0;
  text-align: center;
  border-radius: 0 20rpx 20rpx 0;
}
.del text{
  line-height: 160rpx;
}

.touch-move-active .informationList, .touch-move-active .del, .touch-move-active .moveLong{
  -webkit-transform: translateX(0);
  transform: translateX(0);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.touch-move-active .moveLong{
  -webkit-transform: translateX(-150rpx);
  transform: translateX(-150rpx);
}

