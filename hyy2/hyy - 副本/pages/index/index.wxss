/* swiper */

.swiper-container {
  position: relative;
  overflow: hidden;
}

.swiper {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.swiper-container .dots {
  position: absolute;
  left: 45%;
  bottom: 20rpx;
  padding: 0 20rpx;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 24rpx;
  border-radius: 12rpx;
  background: rgba(0, 0, 0, 0.2);
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 8rpx;
  transition: all 0.6s;
}

.swiper-container .dots .dot.active {
  width: 24rpx;
  background: #fff;
}

