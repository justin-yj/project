/* pages/messageEdit/messageEdit.wxss */
page {
  background: #f5f5f5;
  font-family:Helvetica;
}

.tishi {
  width: 100%;
  font-size: 30rpx;
  color: #999;
  line-height: 100rpx;
  height: 100rpx;
  padding-left: 3%;
}
.addClass{
  height: 176rpx;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}

.addClass view{
  font-size: 32rpx;
  color:rgba(0,0,0,0.65);
  line-height: 50rpx;
  
}

.idInput{
  width:90%;
  height:40rpx;
  padding-left:10rpx;
  font-size:38rpx;
  position:absolute;
  margin-top: 20rpx;
  letter-spacing: 20rpx;
  border-bottom: 1px solid #999;
}
.addClass image{
   width: 80%;
   height:6rpx;
   position: relative;
   top: 30rpx;
}
.baocun{
   width: 100%;
  height: 100rpx;
  background: #4381ed;
  position: fixed;
  bottom: 0;
  line-height: 100rpx;
  color: #fff;
  border-radius: 0;
  font-size: 34rpx;
}
.idShow{
  height: 50rpx;
  display: flex;
  font-size: 60rpx;
  font-weight: bold;
  letter-spacing: 10rpx;

}