  font-weight: bold;
  text-align: center;
  padding-top: 74rpx;
}
.tips{
  text-align: center;
  padding: 0 100rpx 74rpx;
  margin-top: 24rpx;
  color: #adadad
}
.section{
  display:flex;
align-items:center;
padding:0 26rpx;
margin-bottom:18rpx;
height:100rpx;
line-height:100rpx;

}
.radio-item{
  margin-right: 24rpx;
  display: inline-block;
