/* 预约须知弹窗 */
.noticeContent{
  position: fixed;
  left: 0;
  bottom: 0%;
  z-index: 999;
  background: #fff;
  width: 100%;
  height: 100%;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}
 .noticemove{
   animation: noticemove 0.5s;
}
@keyframes noticemove{
  0%{
    bottom: -100%;
  }
  100%{
    bottom:0%;
  }
}
.notice{
  border: 1px solid #8a8a8a;
  width: 90%;
  margin-left: 5%;
  margin-top: 5%;
  padding: 20rpx;
  box-sizing: border-box;
}
.banner{
  width: 100%;
  height: 60rpx;
  text-align: center;
  font-size: 40rpx;
}
.banner > image{
  width: 100%;
  height: 100%;
}
.p{
  padding: 0 24rpx 130rpx;
}
.noticeTitle{
  text-align: center;
  line-height: 72rpx;
  height:72rpx;
  font-size: 36rpx;
  font-weight: 600;
}
.btnClass{
 
  color: #fff;
